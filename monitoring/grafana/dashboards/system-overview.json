{
  "dashboard": {
    "id": null,
    "title": "üè† Sistema Overview - API + MongoDB + Redis",
    "description": "Dashboard geral com vis√£o consolidada de todos os servi√ßos",
    "tags": ["overview", "api", "mongodb", "redis", "system"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üè• System Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"api\"}",
            "legendFormat": "API"
          },
          {
            "expr": "redis_up",
            "legendFormat": "Redis"
          },
          {
            "expr": "up{job=\"prometheus\"}",
            "legendFormat": "Prometheus"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {"text": "DOWN", "color": "red"},
                  "1": {"text": "UP", "color": "green"}
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "‚ö° System Performance",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "API RPS"
          },
          {
            "expr": "rate(redis_commands_processed_total[5m])",
            "legendFormat": "Redis Ops/s"
          },
          {
            "expr": "rate(api_mongodb_queries_total[5m])",
            "legendFormat": "MongoDB Queries/s"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "üî• Error Rates",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"4..|5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "API Errors %"
          },
          {
            "expr": "rate(api_mongodb_errors_total[5m]) / rate(api_mongodb_queries_total[5m]) * 100",
            "legendFormat": "MongoDB Errors %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "üíæ Resource Usage",
        "type": "stat",
        "targets": [
          {
            "expr": "redis_memory_used_bytes / redis_memory_max_bytes * 100",
            "legendFormat": "Redis Memory %"
          },
          {
            "expr": "redis_connected_clients",
            "legendFormat": "Redis Clients"
          },
          {
            "expr": "api_mongodb_total_clients",
            "legendFormat": "MongoDB Docs"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"}
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Redis Memory %"},
              "properties": [{"id": "unit", "value": "percent"}]
            },
            {
              "matcher": {"id": "byName", "options": "Redis Clients"},
              "properties": [{"id": "unit", "value": "short"}]
            },
            {
              "matcher": {"id": "byName", "options": "MongoDB Docs"},
              "properties": [{"id": "unit", "value": "short"}]
            }
          ]
        },
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "üìä API Request Rate & Response Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "Requests/sec"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 Response Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Requests/sec"},
              "properties": [
                {"id": "unit", "value": "ops"},
                {"id": "custom.axisPlacement", "value": "left"}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "P95 Response Time"},
              "properties": [
                {"id": "unit", "value": "s"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6}
      },
      {
        "id": 6,
        "title": "üéØ Cache Hit Rate & Database Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "redis_keyspace_hits_total / (redis_keyspace_hits_total + redis_keyspace_misses_total) * 100",
            "legendFormat": "Redis Hit Rate %"
          },
          {
            "expr": "rate(api_mongodb_query_duration_seconds_sum[5m]) / rate(api_mongodb_query_duration_seconds_count[5m]) * 1000",
            "legendFormat": "MongoDB Avg Response (ms)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Redis Hit Rate %"},
              "properties": [
                {"id": "unit", "value": "percent"},
                {"id": "custom.axisPlacement", "value": "left"}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "MongoDB Avg Response (ms)"},
              "properties": [
                {"id": "unit", "value": "ms"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6}
      },
      {
        "id": 7,
        "title": "üåê HTTP Status Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (status) (rate(http_requests_total[5m]))",
            "legendFormat": "{{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "table",
              "pieType": "donut"
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 14}
      },
      {
        "id": 8,
        "title": "üîÑ Top API Endpoints",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (method, path) (rate(http_requests_total[5m])))",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "job": true, "instance": true},
              "renameByName": {
                "method": "Method",
                "path": "Endpoint",
                "Value": "Requests/sec"
              }
            }
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 14}
      },
      {
        "id": 9,
        "title": "üí° System Alerts & Issues",
        "type": "table",
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "job": true, "instance": true},
              "renameByName": {
                "alertname": "Alert",
                "severity": "Severity",
                "summary": "Description"
              }
            }
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 14}
      }
    ]
  }
}
