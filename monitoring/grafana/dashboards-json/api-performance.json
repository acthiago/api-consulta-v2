{
  "id": null,
  "title": "\ud83d\ude80 API Consulta v2 - Performance & Health",
  "description": "Dashboard completo da API de Consulta e Cobran\u00e7as v2.0",
  "tags": [
    "api",
    "fastapi",
    "python",
    "production"
  ],
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "\ud83c\udfe5 API Health Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"api-consulta-v2\"}",
          "legendFormat": "API Status"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                },
                "1": {
                  "text": "UP",
                  "color": "green"
                }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 3,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "\ud83d\udcca Request Rate (RPS)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"api-consulta-v2\"}[5m]))",
          "legendFormat": "Requests/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 3,
        "x": 3,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "\u26a1 Response Time P95",
      "type": "stat",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"api-consulta-v2\"}[5m])) by (le))",
          "legendFormat": "P95 Latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 0.5
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 3,
        "x": 6,
        "y": 0
      }
    },
    {
      "id": 4,
      "title": "\u274c Error Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"api-consulta-v2\",status=~\"4..|5..\"}[5m])) / sum(rate(http_requests_total{job=\"api-consulta-v2\"}[5m])) * 100",
          "legendFormat": "Error Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "red",
                "value": 5
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 3,
        "x": 9,
        "y": 0
      }
    },
    {
      "id": 5,
      "title": "\ud83d\udcc8 Request Rate Over Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"api-consulta-v2\"}[5m])) by (method)",
          "legendFormat": "{{method}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth"
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      }
    },
    {
      "id": 6,
      "title": "\u23f1\ufe0f Response Time Percentiles",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"api-consulta-v2\"}[5m])) by (le))",
          "legendFormat": "P50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"api-consulta-v2\"}[5m])) by (le))",
          "legendFormat": "P95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"api-consulta-v2\"}[5m])) by (le))",
          "legendFormat": "P99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth"
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 4
      }
    },
    {
      "id": 7,
      "title": "\ud83c\udfaf Top Endpoints by Request Count",
      "type": "table",
      "targets": [
        {
          "expr": "sum by (endpoint) (rate(http_requests_total{job=\"api-consulta-v2\"}[5m]))",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            },
            "indexByName": {},
            "renameByName": {
              "endpoint": "Endpoint",
              "Value": "Requests/sec"
            }
          }
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 12
      }
    },
    {
      "id": 8,
      "title": "\ud83d\udcca HTTP Status Codes",
      "type": "piechart",
      "targets": [
        {
          "expr": "sum by (status) (rate(http_requests_total{job=\"api-consulta-v2\"}[5m]))",
          "legendFormat": "{{status}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "hideFrom": {
              "tooltip": false,
              "vis": false,
              "legend": false
            }
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 12
      }
    },
    {
      "id": 9,
      "title": "\ud83d\udd04 Active Connections",
      "type": "timeseries",
      "targets": [
        {
          "expr": "python_info{job=\"api-consulta-v2\"}",
          "legendFormat": "Python Info"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 12
      }
    }
  ]
}