# Configuração para VPS de Produção
# Copie este arquivo para .env na VPS e configure as variáveis

# MongoDB Connection (use sua string real do MongoDB Atlas)
MONGO_URI=mongodb+srv://seu_usuario:sua_senha@cluster0.wjwnv.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0
DATABASE_NAME=api_consulta_v2_prod

# Segurança
SECRET_KEY=mude-esta-chave-secreta-para-producao-use-algo-muito-seguro
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Docker Hub (para o deploy automatico)
DOCKER_HUB_USERNAME=seu_usuario_dockerhub

# API Configuration
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8000

# CORS (ajuste conforme necessário)
ENABLE_CORS=true
CORS_ORIGINS=["*"]

# Monitoring
ENABLE_METRICS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000
