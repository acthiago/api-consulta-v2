# MongoDB Cloud Configuration
# Configure estas variáveis para usar os scripts de banco de dados

# String de conexão MongoDB Atlas
# Substitua <db_password> pela senha real do seu banco
MONGO_URI=mongodb+srv://thiago:<db_password>@cluster0.wjwnv.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0

# Nome do banco de dados
DATABASE_NAME=api_consulta_v2

# Configurações de monitoramento
MONITOR_INTERVAL_SECONDS=30
MONITOR_DURATION_MINUTES=10

# Configurações de backup
BACKUP_DIRECTORY=./backups
BACKUP_RETENTION_DAYS=30

# Configurações de performance
SLOW_QUERY_THRESHOLD_MS=100
PROFILER_ENABLED=true

# Configurações de índices
AUTO_CREATE_INDEXES=true
INDEX_OPTIMIZATION_ENABLED=true

# Configurações de auditoria
AUDIT_ENABLED=true
AUDIT_COLLECTION=auditoria

# Configurações de limpeza
AUTO_CLEANUP_ENABLED=false
CLEANUP_ORPHANED_DATA=true
CLEANUP_OLD_AUDIT_DAYS=90
